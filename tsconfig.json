{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "outDir": "./dist",
        "paths": {
            "*": ["./node_modules/*"]
        },
        "typeRoots": ["./node_modules/@types",
            "./use-cases/contracts"
        ]
    },
    "include": ["./**/*.ts"],
    "exclude": ["./node_modules"]
}
