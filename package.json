{
  "name": "bitbucket-slack-connector",
  "version": "1.0.0",
  "description": "An application for reflecting Bitbucket Pull Requests events to the Slack channels for PR author and all of reviewers.",
  "main": "app.ts",
  "scripts": {
    "start": "ts-node app.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint --ext .ts ./ --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:update-snapshots": "jest --updateSnapshot"
  },
  "keywords": [
    "bitbucket",
    "slack"
  ],
  "author": "Fedor Shchudlo",
  "license": "Apache 2.0",
  "dependencies": {
    "@slack/bolt": "^3.21.4",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "prom-client": "^15.1.3",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  }
}
